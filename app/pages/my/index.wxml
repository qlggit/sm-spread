<view class="height-100-100">
    <swiper current="{{current}}" class="height-100-100">
        <block wx:for="{{dataList}}">
            <swiper-item  class="height-100-100 text-center">
                <view class="text-center pb-10 pt-10">{{item.name}}</view>
                <image src="{{item.img}}"></image>
                <scroll-view scroll-y class="break-all pb-50 pt-10 pl-10 pr-10 height-310">
                    {{item.abstract}}
                </scroll-view>
            </swiper-item>
        </block>
    </swiper>
    <button type="primary" class="position-fixed z-index-1000 bottom-10 width-40-100 left-30-30" data-source-type="camera" bindtap="chooseImage">拍照</button>
    <button type="default" size="mini" class="position-fixed z-index-1000 bottom-10  left-0" data-source-type="album" bindtap="chooseImage">选照片</button>
    <button type="default" size="mini" open-type="share" class="position-fixed z-index-1000 bottom-10  right-0">分享</button>
</view>
